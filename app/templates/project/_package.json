{
  "name": "<%= opts.projectSlug %>",
  "title": "<%= opts.themeName %>",
  "version": "0.1.0",
  "description": "<%= opts.description %>",
  "keywords": [
    "wordpress"
  ],
  "homepage": "<%= opts.themeURI %>",
  "license": "<%= opts.license %>",
  "private": "true",
  "author": {
    "name": "<%= opts.authorName %>",
    "email": "<%= opts.authorEmail %>"<% if ( opts.authorURI ) { %>,
    "url": "<%= opts.authorURI %>"<% } %>
  },
  "main": "style.css",
  "devDependencies": {
    "browser-sync": "^2.14.0",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.1",
    "gulp-concat": "^2.6.0",
    "gulp-cssnano": "^2.1.2",
    "gulp-imagemin": "^2.4.0",
    "gulp-load-plugins": "^1.2.4",
    "gulp-notify": "^2.2.0",
    "gulp-plumber": "^1.1.0",
    "gulp-rename": "^1.2.2",
    "gulp-replace": "^0.5.4",
    "gulp-sass": "^2.3.2",
    "gulp-sourcemaps": "^1.9.1",
    "gulp-uglify": "^1.5.4",
    <% if ( opts.bootstrap ) { %>
    "bootstrap-sass": "^3.3.7"
    <% } else { %>
    "normalize.css": "^5.0.0",
    "susy": "^2.2.12"
    <% } %>
  }
}
